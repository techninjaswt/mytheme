                                    "
                                  ></span>
                                  {% if block.settings.image_2 != blank %}
                                    {%- capture sizes -%}
																				(min-width: 1700px) 1700px, (min-width: 1420px) 1420px, (min-width: 1100px) 1100px, (min-width: 710px) 710px, calc(100vw - 30px)
																			{%- endcapture -%}
                                    {{
                                      block.settings.image_2
                                      | image_url: width: block.settings.image_2.width
                                      | image_tag:
                                        loading: 'lazy',
                                        sizes: sizes,
                                        widths: '550, 710, 1100, 1420, 1700, 1920',
                                        width: block.settings.image_2.width,
                                        class: 'mega-menu__item-image'
                                    }}
                                  {%- endif -%}
                                  {% if block.settings.description_2 != blank %}
                                    <div class="mega-menu__item-description subtitle">
                                      {{ block.settings.description_2 }}
                                    </div>
                                  {%- endif -%}
                                  {% if block.settings.heading_2 != blank %}
                                    <div class="mega-menu__item-heading {{ block.settings.heading_2_size }}">
                                      {{ block.settings.heading_2 }}
                                    </div>
                                  {%- endif -%}
                                  {% if block.settings.show_button_2 and block.settings.button_label_2 != blank %}
                                    <a
                                      {% if block.settings.button_link_2.url != blank %}
                                        href="{{ block.settings.button_link_2 }}"
                                      {% endif %}
                                      class="mega-menu__button button button--{{ block.settings.button_style_2 }}"
                                      {% if block.settings.button_link_2.url == blank %}
                                        aria-disabled="true"
                                      {% endif %}
                                    >
                                      {{ block.settings.button_label_2 | escape }}
                                    </a>
                                  {% endif %}
                                  <a
                                    {% if block.settings.button_link_2.url != blank %}
                                      href="{{ block.settings.button_link_2 }}"
                                    {% endif %}
                                    class="mega-menu__item-link-overlay"
                                    {% if block.settings.button_link_2.url == blank %}
                                      aria-disabled="true"
                                    {% endif %}
                                    aria-label="Promo banner"
                                  ></a>
                                </div>
                              {% endif %}
                              {% if block.settings.show_mega_menu_3 %}
                                <div class="mega-menu__item mega-menu__item--3 color-{{ block.settings.color_scheme_3 }} mega-menu__item--{{ block.settings.height_3 }}">
                                  <span
                                    class="mega-menu__overlay"
                                    style="
                                      --opacity-slide: {{ block.settings.overlay_opacity_3 }};
                                      --opacity-slide-hover: {{ block.settings.overlay_opacity_3 | plus: 0.1 }}
                                    "
                                  ></span>
                                  {% if block.settings.image_3 != blank %}
                                    {%- capture sizes -%}
																				(min-width: 1700px) 1700px, (min-width: 1420px) 1420px, (min-width: 1100px) 1100px, (min-width: 710px) 710px, calc(100vw - 30px)
																			{%- endcapture -%}
                                    {{
                                      block.settings.image_3
                                      | image_url: width: block.settings.image_3.width
                                      | image_tag:
                                        loading: 'lazy',
                                        sizes: sizes,
                                        widths: '550, 710, 1100, 1420, 1700, 1920',
                                        width: block.settings.image_3.width,
                                        class: 'mega-menu__item-image'
                                    }}
                                  {%- endif -%}
                                  {% if block.settings.description_3 != blank %}
                                    <div class="mega-menu__item-description subheading">
                                      {{ block.settings.description_3 }}
                                    </div>
                                  {%- endif -%}
                                  {% if block.settings.heading_3 != blank %}
                                    <div class="mega-menu__item-heading {{ block.settings.heading_3_size }}">
                                      {{ block.settings.heading_3 }}
                                    </div>
                                  {%- endif -%}
                                  {% if block.settings.show_button_3 and block.settings.button_label_3 != blank %}
                                    <a
                                      {% if block.settings.button_link_3.url != blank %}
                                        href="{{ block.settings.button_link_3 }}"
                                      {% endif %}
                                      class="mega-menu__button button button--{{ block.settings.button_style_3 }}"
                                      {% if block.settings.button_link_3.url == blank %}
                                        aria-disabled="true"
                                      {% endif %}
                                    >
                                      {{ block.settings.button_label_3 | escape }}
                                    </a>
                                  {% endif %}
                                  <a
                                    {% if block.settings.button_link_3.url != blank %}
                                      href="{{ block.settings.button_link_3 }}"
                                    {% endif %}
                                    class="mega-menu__item-link-overlay"
                                    {% if block.settings.button_link_3.url == blank %}
                                      aria-disabled="true"
                                    {% endif %}
                                    aria-label="Promo banner"
                                  ></a>
                                </div>
                              {% endif %}
                            </div>
                          {% endif %}
                        {% elsif mega_menu_blocks %}
                          {% liquid
                            assign overlay = block.settings.overlay_opacity
                            assign text_color = block.settings.color_scheme_1
                          %}
                          <div class="mega-menu--blocks">
                            <div
                              class="mega-menu__wrapper mega-menu mega-menu__items mega-menu__wrapper--blocks"
                            >
                              <ul class="mega-menu__list list-unstyled focus-inset">
                                {% for item in block.settings.select_collections %}
                                  <li class="mega-menu__card mega-menu__card--{{ block.settings.height }} color-{{ text_color }}">
                                    <span
                                      class="mega-menu__overlay"
                                      style="
                                        --opacity-slide: {{ overlay }};
                                        --opacity-slide-hover: {{ overlay | plus: 0.1 }}
                                      "
                                    ></span>

                                    {% liquid
                                      if item.id != collection_individual_id
                                        case block.settings.image
                                          when 'product_hover'
                                            assign image_first = item.products[0].images[1]
                                            assign image_second = item.products[0].images[0]
                                            assign image_third = item.featured_image
                                          when 'product'
                                            assign image_first = item.products[0].images[0]
                                            assign image_second = item.featured_image
                                            assign image_third = item.products[0].images[1]
                                          when 'collection'
                                            assign image_first = item.featured_image
                                            assign image_second = item.products[0].images[1]
                                            assign image_third = item.products[0].images[0]
                                        endcase
                                      endif
                                    %}

                                    {% if item.id != collection_individual_id %}
                                      {% if image_first != blank %}
                                        {% assign collection_product_image = image_first %}
                                      {% elsif image_second != blank %}
                                        {% assign collection_product_image = image_second %}
                                      {% else %}
                                        {% assign collection_product_image = image_third %}
                                      {% endif %}
                                    {% else %}
                                      {% assign collection_product_image = item.featured_image %}
                                    {% endif %}

                                    {%- if collection_product_image != blank -%}
                                      <img
                                        srcset="
                                          {%- if collection_product_image.width >= 533 -%}{{ collection_product_image | image_url: width: '533x' }} 533w,{%- endif -%}
                                          {%- if collection_product_image.width >= 720 -%}{{ collection_product_image | image_url: width: '720x' }} 720w,{%- endif -%}
                                          {%- if collection_product_image.width >= 940 -%}{{ collection_product_image | image_url: width: '940x' }} 940w,{%- endif -%}
                                          {%- if collection_product_image.width >= 1066 -%}{{ collection_product_image | image_url: width: '1066x' }} 1066w{%- endif -%},
                                          {%- if collection_product_image.width >= 1100 -%}{{ collection_product_image | image_url: width: '1100x' }} 1100w,{%- endif -%}
                                          {%- if collection_product_image.width >= 1290 -%}{{ collection_product_image | image_url: width: '1290x' }} 1290w,{%- endif -%}
                                          {%- if collection_product_image.width >= 1440 -%}{{ collection_product_image | image_url: width: '1440x' }} 1440w,{%- endif -%}
                                          {%- if collection_product_image.width >= 1600 -%}{{ collection_product_image | image_url: width: '1600x' }} 1600w,{%- endif -%}
                                          {%- if collection_product_image.width >= 1920 -%}{{ collection_product_image | image_url: width: '1920x' }} 1920w{%- endif -%}
                                        "
                                        src="{{ collection_product_image | image_url: width: '533x' }}"
                                        sizes="(min-width: 1100px) 1290px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                                        alt="{{ collection_product_image.alt | escape }}"
                                        loading="lazy"
                                        class="mega-menu__image motion-reduce img-scale"
                                        width="{{ collection_product_image.width }}"
                                        height="{{ collection_product_image.height }}"
                                      >
                                    {% endif %}
                                    <h3 class="mega-menu__title h4">
                                      <a
                                        href="{{ item.url | default: '#' }}"
                                        class="mega-menu__link list-menu__item focus-inset caption-large"
                                      >
                                        {{- item.title -}}
                                      </a>
                                    </h3>
                                    {% if block.settings.show_button and block.settings.button_label != blank %}
                                      <a
                                        href="{{ item.url }}"
                                        class="mega-menu__button button button--{{ block.settings.button_style }}"
                                      >
                                        {{ block.settings.button_label }}
                                      </a>
                                    {% endif %}
                                    <a href="{{ item.url | default: '#' }}" class="mega-menu__card-link" aria-label="{{ item.title }}"></a>
                                  </li>
                                {% endfor %}
                              </ul>
                            </div>
                          </div>
                        {% endif %}
                      {% endfor %}
                      {% liquid
                        assign mega_menu_blocks = false
                      %}
                    </details>
                  {%- else -%}
                    <a
                      href="{{ link.url }}"
                      class="menu-drawer__menu-item list-menu__item link link--text focus-inset{% if link.current %} menu-drawer__menu-item--active{% endif %}"
                      {% if link.current %}
                        aria-current="page"
                      {% endif %}
                    >
                      {{ link.title | escape }}
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
              {%- for link in section.settings.small_menu.links -%}
                <li>
                  <a
                    href="{{ link.url }}"
                    class="menu-drawer__menu-item list-menu__item link link--text focus-inset{% if link.current %} menu-drawer__menu-item--active{% endif %}"
                    {% if link.current %}
                      aria-current="page"
                    {% endif %}
                  >
                    {{ link.title | escape }}
                  </a>
                </li>
              {%- endfor -%}
            </ul>

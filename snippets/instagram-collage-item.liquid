{% comment %}
		Renders instagram-collage image
		Accepts:
		- image: {Object} Slider image
		- image_ratio: {String} Image ratio
		Usage:
	{% render 'instagram-collage-item', image: block.settings.image, padding_bottom: padding_bottom %}
{% endcomment %}

<div class="swiper-slide">
	<div class="instagram-collage__image" style="padding-bottom: {{ padding_bottom }}%">
		{%- if image != blank -%}
			{%- assign sizes = '(min-width: 1100px) 750, (min-width: 750px) 550, 275' -%}
			{%- capture style -%}
				object-position: {{ image.presentation.focal_point }};
			{%- endcapture -%}

			{{
			image | image_url: width: 710 | image_tag:
			loading: 'lazy',
			sizes: sizes,
			widths: '300, 550, 750',
			style: style
			}}
		{% else %}
			{{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
		{%- endif -%}
	</div>
</div>